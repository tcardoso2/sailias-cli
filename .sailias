{
  "source": "sailias-0.2.4.tgz",
  
  "sink": "./output",
  
  "pre-clone": {
    "step": "npm install <source>",
    "verify": "<stdout> | grep -q 'installed' && echo 'true'"
  },
  
  "copy": {
    "step": "cp -Rf node_modules/sailias/* <sink>",
    "verify": "ls <sink> | grep -q 'app.js' && echo 'true'"
  },

  "remove": {
    "step": "rm -rf <sink>/*",
    "verify": ""
  }
}